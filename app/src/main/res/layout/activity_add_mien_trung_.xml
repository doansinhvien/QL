<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/bg1"
    tools:context=".activity.AddMienTrung_Activity">

    <EditText
        android:id="@+id/edTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#111111"
        android:textColorHint="#FF111111"
        android:layout_margin="15dp"
        android:hint="Tên trái cây"/>
    <EditText
        android:id="@+id/edMoTa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#111111"
        android:textColorHint="#FF111111"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Mô tả"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:onClick="chupAnh"
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chụp ảnh"
            android:layout_marginRight="30dp"></Button>

        <Button
            android:onClick="chooseFile"
            android:id="@+id/btnChooseFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn File "></Button>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="202dp"
        android:layout_height="169dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="save"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveFile"
            android:onClick="saveFile"/>
    </LinearLayout>
</LinearLayout>